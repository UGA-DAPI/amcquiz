<div class="box informationbox well">
  <div class="box generalbox">
    <div class="row">
      <div class="col-lg-12">
        <ul class="list-inline">
          <li class="list-inline-item">
            <form action="view.php?id={{cm.id}}&current=grade" method="post">
              <input type="hidden" name="action" value="launch-grading-docs-generation">
              <button type="submit" role="submit" class="btn btn-primary">
                    {{#str}}grading_launch_grade_docs, mod_amcquiz{{/str}}
              </button>
            </form>
          </li>
          <li class="list-inline-item">
            <form action="view.php?id={{cm.id}}&current=grade" method="post">
              <input type="hidden" name="action" value="record-grade-book">
              <button type="submit" role="submit" class="btn btn-primary">
                    {{#str}}grading_record_in_gradebook, mod_amcquiz{{/str}}
              </button>
            </form>
          </li>
        </ul>
      </div>
    </div>
    <hr/>
    <div class="row">
      <div class="col-lg-12">
        {{#amcquiz.graded_at}}
          <h4>{{#str}}grading_file_notes_table, mod_amcquiz{{/str}}</h4>
          {{#files}}
            <ul class="list-inline">
              <li class="list-inline-item">
                <form action="view.php?id={{cm.id}}&current=grade" method="post">
                  <input type="hidden" name="action" value="get-grade-csv">
                  <button type="submit" role="submit" class="btn-link">CSV</button>
                </form>
              </li>
              <li class="list-inline-item">
                <form action="view.php?id={{cm.id}}&current=grade" method="post">
                  <input type="hidden" name="action" value="get-grade-ods">
                  <button type="submit" role="submit" class="btn-link">ODS</button>
                </form>
              </li>
              <li class="list-inline-item">
                <a class="btn-link" href="apogee.php?id={{cm.id}}">APOGEE</a>
              </li>
            </ul>
          {{/files}}
          <hr/>
          {{#stats}}
            <div class="row">
              <div class="col-lg-12">
                <h3>{{#str}}grading_statistics, mod_amcquiz{{/str}}</h3>
                <table class="table table-striped">
                  <tbody>
                    <tr>
                      <td>
                        <h6>{{#str}} grading_size, mod_amcquiz {{/str}}</h6>
                      </td>
                      <td>{{stats.workforce}}</td>
                    </tr>
                    <tr>
                      <td>
                        <h6>{{#str}} grading_mean, mod_amcquiz {{/str}}</h6>
                      </td>
                      <td>{{stats.mean}}</td>
                    </tr>
                    <tr>
                      <td>
                        <h6>{{#str}} grading_median, mod_amcquiz {{/str}}</h6>
                      </td>
                      <td>{{stats.median}}</td>
                    </tr>
                    <tr>
                      <td>
                        <h6>{{#str}} grading_mode, mod_amcquiz {{/str}}</h6>
                      </td>
                      <td>{{stats.mode}}</td>
                    </tr>
                    <tr>
                      <td>
                        <h6>{{#str}} grading_range, mod_amcquiz {{/str}}</h6>
                      </td>
                      <td>{{stats.range}}</td>
                    </tr>
                  </tbody>
                </table>
                <p><em>{{#str}}grading_not_satisfying_notation, mod_amcquiz{{/str}}</em></p>
              </div>
            </div>
          {{/stats}}
          {{^stats}}
          <div class="row">
            <div class="col-lg-12">
              <h3>{{#str}}grading_no_stats, mod_amcquiz{{/str}}</h3>
            </div>
          </div>
          {{/stats}}
        {{/amcquiz.graded_at}}
        {{^amcquiz.graded_at}}
            <h3>{{#str}}grading_no_grade, mod_amcquiz{{/str}}</h3>
        {{/amcquiz.graded_at}}
      </div>
    </div>

  </div>
</div>
