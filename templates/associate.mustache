<div class="box informationbox well">
    <div class="box generalbox">
      <div class="form-inline">
          <div class="form-group">
              <label for="association-mode-select">{{#str}}associationmode, mod_amcquiz{{/str}}</label>
              <select id="association-mode-select" class="form-control custom-select submit-on-change" name="mode">
                  {{#associationmodes}}
                      <option value={{value}} {{#selected}}selected{{/selected}}>{{label}}</option>
                  {{/associationmodes}}
              </select>
          </div>
          <div class="form-group">
              <label for="association-user-modes">{{#str}}associationusermode, mod_amcquiz{{/str}}</label>
              <select id="association-user-modes" class="form-control custom-select submit-on-change" name="usermode">
                  {{#usermodes}}
                      <option value={{value}} {{#selected}}selected{{/selected}}>{{label}}</option>
                  {{/usermodes}}
              </select>
          </div>
      </div>
      <hr/>
      <div class="row">
        <div class="col-lg-12">
          <table class="table table-striped">
            <tbody>
              {{#usersdata}}
                <tr>
                  <td>
                    <img class="student-name-caption" src="{{fileurl}}" alt="{{filename}}"></img>
                  </td>
                  <td>
                      <form action="associating.php" method="POST">
                          <input type="hidden" name="a" value="{{amcquiz.id}}" />
                          <input type="hidden" name="action" value="set" />
                          <input type="hidden" name="file" value="{{filename}}" />
                          <select name="student" class="custom-select form-control submit-on-change">
                            {{#addemptyoption}}
                            <option value="">--</option>
                            {{/addemptyoption}}
                            {{#students}}
                              <option value="{{value}}" {{#selected}} selected {{/selected}}>{{label}}</option>
                            {{/students}}
                          </select>
                      </form>
                  </td>
                <tr>
              {{/usersdata}}
              {{^usersdata}}
                <h4>{{#str}}associating_no_data_for_query, mod_amcquiz{{/str}}</h4>
              {{/usersdata}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
</div>
